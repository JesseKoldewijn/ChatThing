{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"buildCommand": "yarn run build",
	"outputDirectory": "dist/client",
	"framework": null,
	"rewrites": [
		{
			"source": "/settings",
			"destination": "/settings.html"
		},
		{
			"source": "/usage",
			"destination": "/usage.html"
		},
		{
			"source": "/((?!assets/|.*\\.html$|.*\\.js$|.*\\.css$|.*\\.svg$|.*\\.png$|.*\\.jpg$|.*\\.ico$).*)",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/assets/(.*)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/(.*).html",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=0, stale-while-revalidate=86400"
				}
			]
		}
	]
}
